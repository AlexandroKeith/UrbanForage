<div class="container my-4">
  <div class="collection-index-top d-flex justify-content-between align-items-start my-5">
    <h1> Your collections </h1>
    <%= link_to 'Create collection', new_collection_path, class:'btn btn-primary my-auto' %>
  </div>
  <% @user_collections.each do |collection| %>
    <%= link_to collection_path(collection) do %>
      <div class="card my-3" id="collection-card">
        <div class="card-body">
          <h2 class="card-title"> <%= collection.name %> </h2>
          <p class="card-text"> <%= collection.description %> </p>
            <div class="action-btns mt-4">
              <%= link_to edit_collection_path(collection) do %>
                <i class="ph-pencil-fill" id="action-icon"></i>
              <% end %>
              <%= link_to collection_path(collection), method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="ph-trash-fill" id="action-icon"></i>
              <% end %>
            </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="friends-collection my-5">
    <h1> Your saved collections </h1>
      <% @favorites.each do |favorite| %>
      <h3> <%= favorite.favoritable.name %> </h3>
      <p> <%= favorite.favoritable.description %> </p>
      <p><%= favorite.favoritable.user.first_name %> <%= favorite.favoritable.user.last_name %> </p>
      <% if favorite.favoritable.user.photo.key.nil? %>
          <th scope="row"> <%= image_tag "unisex-avatar2.jpg", height: 50, width: 50, crop: :fill, class: "small-avatar-default"%> </th>
        <% else %>
          <th scope="row"><%= cl_image_tag favorite.favoritable.user.photo.key, height: 50, width: 50, crop: :fill, class: "small-avatar"%></th>
        <% end %>
    <% end %>

  </div>

  <div class="all-collections row my-5">
    <div class="col-12">
      <h1> All collections </h1>
      <% @collections.each do |collection| %>
        <h3> <%= collection.name %> </h3>
        <p> <%= collection.description %> </p>
        <p> User: <%= collection.user.first_name %> <%= collection.user.last_name %>
      <% end %>
    </div>
  </div>
</div>
