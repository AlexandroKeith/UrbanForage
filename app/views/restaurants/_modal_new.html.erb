<div class="modal fade" id="exampleModal" data-insert-in-list-target="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tell others about your experience here</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" data-insert-in-list-target="closeModal">&times;</span>
        </button>
      </div>

      <%= simple_form_for([restaurant, review], remote: true) do |f| %>
        <div class="modal-body">
          <%= f.input :rating, as: :integer %>
          <%= f.input :description, as: :text %>
        </div>
        <div class="modal-footer">
          <a type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</a>
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
