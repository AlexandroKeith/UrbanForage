<div class="container">

  <%= link_to "Back", :back, class:"btn btn-outline-primary mb-3" %>

  <div class="carousel container-carousel justify-content-center">
    <div class="carousel-card col-12 p-0">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

          <div class="carousel-inner">
            <% if @restaurant.photos.count > 1 %>
              <div class="carousel-item active">
                <%= image_tag @restaurant.photos.first.url, width: 400, height: 300, class: 'w-100 carousel-img' %>
              </div>
            <% @restaurant.photos.drop(1).each do |photo| %>
              <div class="carousel-item">
                <%= image_tag photo.url, width: 400, height: 300, class: 'w-100 carousel-img' %>
              </div>
              <% end %>
            <% else %>
              <div class="carousel-item active">
                <%= image_tag @restaurant.photos.first.url, width: 400, height: 300, class: 'w-100 carousel-img' %>
              </div>
            <% end %>
          </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="container container-show p-0">


    <div class="row-show col-12 p-0 d-flex justify-content-center">

      <div class="row-restaurant col-6">
        <h1><%= @restaurant.name %></h1>
        <p><%= @restaurant.description%></p>

        <div class="row-reviews justify-content-center align-items-bottom">

          <div class="row-actions" data-controller="insert-in-list" data-insert-in-list-position-value="beforeend">
            <div data-insert-in-list-target="items" class="review">
              <% if @restaurant.reviews.blank? %>
                <p><small>"Be the first to leave a review for <strong><%= @restaurant.name %></strong>"</small></p>
              <% else %>
                <% @restaurant.reviews.last(4).each do |review| %>
                <%= render 'restaurants/review', review: review %>
                <p></p>
                <% end %>
              <% end %>
            </div>

          <div class="buttons d-flex">
            <%= link_to "Directions", @restaurant.directions , class: "btn btn-outline-primary mb-3 mt-3", target: "_blank" %>
            <%= link_to "Book", @restaurant.website, class: "btn btn-outline-primary mb-3 mt-3", target: "_blank" %>
            <% if user_signed_in? %>
              <button type="button" class="btn btn-outline-primary mb-3 mt-3" data-toggle="modal" data-target="#exampleModal">Add a review</button>
            <% else %>
              <p class="review-login">Please login or create a new account to add a review.</p>
            <% end %>
          </div>
            <%= render 'restaurants/modal_new', restaurant: @restaurant, review: @review %>
          </div>
        </div>
      </div>

      <div class="row-map col-6">
        <div id="map-show"
          style="width:100%; height:620px"
          data-marker = "<%= @marker.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
