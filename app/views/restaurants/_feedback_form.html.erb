<%= simple_form_for([restaurant, review], data: { insert_in_list_target: 'form', action: 'submit->insert-in-list#send' }) do |f| %>
  <div class="modal-body">
    <%= f.input :rating, as: :integer %>
    <%= f.input :description, as: :text %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save Changes", class: "btn btn-outline-primary" %>
    <button type="button" class="btn btn-primary" style="width:100px" data-dismiss="modal">Close</button>
  </div>
<% end %>
